    <Copyright>Copyright Â© 2023 Vaughn Nugent</Copyright>
    <PackageProjectUrl>https://www.vaughnnugent.com/resources</PackageProjectUrl>
    <AssemblyName>SocialOauth</AssemblyName>
    <SignAssembly>True</SignAssembly>
